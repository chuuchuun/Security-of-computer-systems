<Window x:Class="SignatureVerifierApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Signature Verifier" Height="300" Width="500">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Signed PDF File:" />
            <Button Content="Load Signed PDF" Click="LoadPdf_Click" Margin="0,5"/>
            <Button Content="Verify Signature" Click="VerifySignature_Click" Margin="0,20"/>
            <TextBlock x:Name="StatusBlock" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
        </StackPanel>
        <TextBlock Text="Public Key File (PEM):" Margin="0,21,0,205" />
    </Grid>
</Window>
